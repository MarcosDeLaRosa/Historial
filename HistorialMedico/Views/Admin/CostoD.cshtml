@model HistorialMedico.Models.precioConsulta

@{
    ViewBag.Title = "CostoD";
}

<h2>Costo</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Precio Consulta</h4>
        <hr />
        @Html.HiddenFor(model => model.id_precioConsulta)

        <div class="form-group">
            <div class="col-md-10">
                Doctor: @Html.DisplayFor(model => model.doctor.nombre)
                <br />
                Precio: @Html.EditorFor(model => model.costo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.costo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-danger" />
            </div>
        </div>
    </div>
}
