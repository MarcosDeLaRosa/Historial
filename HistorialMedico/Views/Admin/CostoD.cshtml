@model HistorialMedico.Models.precioConsulta

@{
    Layout = "~/Views/Shared/_AdminLayout/_AdminLayout.cshtml";
    ViewBag.Title = "CostoD";
}

<h2>Costo</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-inline">
        <h4>Precio Consulta</h4>
        <hr />
        @Html.HiddenFor(model => model.id_precioConsulta)
        <div class="form-group">
            @Html.Label("Doctor: ") @Html.LabelFor(model => model.doctor.nombre) 
            @Html.EditorFor(model => model.id_doctor, new { type = "hidden" })
        </div>
        <div class="form-group">
            @Html.Label("Precio:") @Html.EditorFor(model => model.costo, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            @Html.ValidationMessageFor(model => model.costo, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
