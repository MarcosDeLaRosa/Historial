@model HistorialMedico.Models.precioConsulta

@{
    Layout = "~/Views/Shared/_AdminLayout/_AdminLayout.cshtml";
    ViewBag.Title = "CrearCosto";
}

<form action="/Admin/crearCostos" method="post">
    <h4>Precio Consulta</h4>
    <hr />
    <div class="form-inline">
        <div class="form-group">
            @Html.Label("Doctor")
            @Html.DropDownListFor(model => model.id_doctor, ViewBag.NombreDoctor as SelectList, "Doctor", new { @Class = "btn btn-primary" })
            @Html.ValidationMessageFor(model => model.id_doctor, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.Label("Costo")
            @Html.EditorFor(model => model.costo, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>