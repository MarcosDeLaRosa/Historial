@model HistorialMedico.Models.cita
@{
    Layout = "~/Views/Shared/_AsistenteLayout/_AsistenteLayout.cshtml";
    ViewBag.Title = "crearCita";
}
<center>
    <h2>Crear Cita</h2>
</center>
<form action="/Asistente/AsignarCita" method="post">
    <div class="form-horizontal">
        <hr />


        <div class="form-group">
            <div class="col-md-10">
                <h4>Paciente</h4>
                @Html.DropDownListFor(model => model.id_pasiente, ViewBag.NombrePaciente as SelectList, "Cliente", new { @Class = "btn btn-danger", style="width: 150px;" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <h4>Doctor</h4>
                @Html.DropDownListFor(model => model.id_doctor, ViewBag.NombreDoctor as SelectList, "Doctor", new { @Class = "btn btn-danger", style = "width: 150px;" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <h4>Fecha de Cita:</h4>
                @Html.EditorFor(model => model.fechaDeCita, new { htmlAttributes = new { @class = "form-control", type = "date", style = "width: 150px;" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <h4>Hora:</h4>
                @Html.EditorFor(model => model.hora, new { htmlAttributes = new { @class = "form-control", style = "width: 150px;" } })

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <h4>Duracción:</h4>
                @Html.EditorFor(model => model.duracion, new { htmlAttributes = new { @class = "form-control", style = "width: 150px;" } })
                <br />
                <input type="submit" value="Guardar" class="btn btn-danger" />
            </div>
        </div>

    </div>
</form>
