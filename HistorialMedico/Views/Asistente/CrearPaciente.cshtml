@model HistorialMedico.Models.paciente

@{
    Layout = "~/Views/Shared/_AsistenteLayout/_AsistenteLayout.cshtml";
    ViewBag.Title = "CrearPaciente";
}
<center>
    <h1 style="color:red">CrearPaciente</h1>
</center>
<hr />

@using (Html.BeginForm(Html.BeginForm("Create", "Asistente", FormMethod.Post, new { enctype = "multipart/form-data" })))
{
    @Html.AntiForgeryToken()
    


    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-inline">
        @Html.Label("Cedula")
        @Html.EditorFor(model => model.cedula, new { htmlAttributes = new { @class = "form-control", style = "width: 250px;" } })

        @Html.Label("Nombre", new { style = "margin-left: 50px;" })
        @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", style = "width: 250px;" } })

    </div>
    <br />
    <div class="form-inline">

        @Html.Label("Apellido")
        @Html.EditorFor(model => model.apellido, new { htmlAttributes = new { @class = "form-control", style = "width: 250px;" } })


        @Html.Label("Fecha de Nacimiento", new { style = "margin-left: 40px;" })
        @Html.EditorFor(model => model.fechaNacimiento, new { htmlAttributes = new { @class = "form-control", style = "width: 250px;" } })
        @Html.ValidationMessageFor(model => model.fechaNacimiento, "", new { @class = "text-danger" })

    </div>
    <br />
    <div class="form-inline">
        @Html.Label("Correo")
        @Html.EditorFor(model => model.correo, new { htmlAttributes = new { @class = "form-control", style = "width: 250px;" } })
        @Html.ValidationMessageFor(model => model.correo, "", new { @class = "text-danger" })


        @Html.Label("Telefono", new { style = "margin-left: 50px;"})
        @Html.EditorFor(model => model.telefono, new { htmlAttributes = new { @class = "form-control", style = "width: 250px;" } })
    </div>
    <br />
    <div class="form-inline">
        @Html.Label("Tipo de Sangre")
        @Html.EditorFor(model => model.tipodeSangre, new { htmlAttributes = new { @class = "form-control", style = "width: 250px;" } })
        @Html.Label("Foto")
        <input accept=".jpg" style="width: 210px; margin-left: 420px; margin-top: -30px;" type="file" name="InputFile" required class="btn btn-danger" />
    </div>
    <div class="form-inline">
        <br />
        <input type="submit" value="Guardar" class="btn btn-danger" />
       
    </div>
    }
