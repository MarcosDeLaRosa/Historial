@model IEnumerable<HistorialMedico.Models.cita>

@{
    ViewBag.Title = "Index";
}

<center>
    <h2>Ver Citas</h2>
</center>

<div class="form-horizontal">
    <hr />
    <input type="text" class="form-control" id="search" placeholder="Buscador" />
    <hr />

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

</div>


<br />
<table class="table table-striped">
  
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id_asistente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.id_pasiente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.correo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.foto)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.correo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.foto)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id_asistente }) |
            @Html.ActionLink("Details", "Details", new { id=item.id_asistente }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id_asistente })
        </td>
    </tr>
}

</table>
