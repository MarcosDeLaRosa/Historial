@model HistorialMedico.Models.pagoConsulta

@{
    Layout = "~/Views/Shared/_AsistenteLayout/_AsistenteLayout.cshtml";
    ViewBag.Title = "ReportesDelSistema";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h2>Factura</h2>
    <hr />
    <div class="form-group">
        <div class="col-md-10">
            @Html.Label("Paciente")
            @Html.DropDownListFor(model => model.id_Paciente, ViewBag.NombrePaciente as SelectList, "Paciente", new { @Class = "btn btn-danger", id = "nom", style = "width: 220px;" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.Label("Costo")
            @Html.DropDownListFor(model => model.id_PrecioConsulta, ViewBag.NombreDoctor as SelectList, "Costo", new { @Class = "btn btn-danger", id = "cost", style="width: 220px; margin-left: 18px;" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-10">
            @Html.Label("Pago")
            @Html.EditorFor(model => model.pago, new { htmlAttributes = new { @class = "form-control", style = "width: 320px;" } })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.Label("Fecha")
            <input type="date" name="fecha" style="width: 320px;" class="form-control" />

            <input type="hidden" id="nombre" name="nombre" class="form-control" />
            <input type="hidden" id="costo" name="costo" class="form-control" />
            <br />
            <input type="submit" onclick="validar();" value="Guardar" class="btn btn-danger" />
        </div>
    </div>

</div>
}

