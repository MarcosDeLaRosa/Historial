@model HistorialMedico.Models.visita

@{
    Layout = "~/Views/Shared/_DoctorLayout/_DoctorLayout.cshtml";
    ViewBag.Title = "CrearVisita";
}


    <h2>Crear Visita</h2>


<form action="/Doctor/CreateVisita" method="post">
    <div class="form-horizontal">
        <hr />


        <div class="form-group">
            <div class="col-md-10">
                <h4>Paciente</h4>
                @Html.DropDownListFor(model => model.id_paciente, ViewBag.NombrePaciente as SelectList, "Cliente", new { @Class = "btn btn-success", style = "width: 250px;" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <h4>Doctor</h4>
                @Html.DropDownListFor(model => model.id_doctor, ViewBag.NombreDoctor as SelectList, "Doctor", new { @Class = "btn btn-success", style = "width: 250px;" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <h4>Motivo</h4>
                @Html.EditorFor(model => model.motivo, new { htmlAttributes = new { @class = "form-control" , style = "width: 250px;" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <h4>Comentario</h4>
                @Html.EditorFor(model => model.comentario, new { htmlAttributes = new { @class = "form-control" , style = "width: 250px;" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <h4>Receta</h4>
                @Html.EditorFor(model => model.recetaDeMedicmentos, new { htmlAttributes = new { @class = "form-control", style = "width: 250px;" } })

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <h4>Fecha De La Proxima Visita:</h4>
                @Html.EditorFor(model => model.fechaProximaVisita, new { htmlAttributes = new { @class = "form-control", type = "date", style = "width: 250px;" } })
                <br />
                <input type="submit" value="Guarar" class="btn btn-success" />
            </div>
        </div>


                

    </div>
</form>

