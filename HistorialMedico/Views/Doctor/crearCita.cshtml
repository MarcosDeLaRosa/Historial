@model HistorialMedico.Models.cita
@{
    Layout = "~/Views/Shared/_DoctorLayout/_DoctorLayout.cshtml";
    ViewBag.Title = "crearCita";
}


    <h2>Crear Cita</h2>

<form action="/Doctor/crearCita" method="post">
    <div class="form-horizontal">
        <hr />


        <div class="form-group">
            <div class="col-md-10">
                <h4>Paciente</h4>
                @Html.DropDownListFor(model => model.id_pasiente, ViewBag.NombrePaciente as SelectList, "Cliente", new { @Class = "btn btn-success", style = "width: 250px;" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <h4>Doctor</h4>
                @Html.DropDownListFor(model => model.id_doctor, ViewBag.NombreDoctor as SelectList, "Doctor", new { @Class="btn btn-success", style = "width: 250px;" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <h4>Fecha de Cita:</h4>
                @Html.EditorFor(model => model.fechaDeCita, new { htmlAttributes = new { @class = "form-control", type = "date", style = "width: 250px;" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <h4>Hora:</h4>
                @Html.EditorFor(model => model.hora, new { htmlAttributes = new { @class = "form-control", style = "width: 250px;" } })

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <h4>Duracción:</h4>
                @Html.EditorFor(model => model.duracion, new { htmlAttributes = new { @class = "form-control", style="width: 250px;" } })
                <br />
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>

            

    </div>
</form>